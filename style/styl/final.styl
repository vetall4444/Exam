$font = 'Segoe UI'       
$fontBody = 'Times New Roman'       
$body = #222222       
$dark-grey = #666666       
$dark-grey-2 = #C4C4C4       
$grey-2 = #DDDDDD       
$light-grey = #F2F2F2       
$white = #FFFFFF       
$accent_active = #FFCC66       
$picked = #FFDD99       
$on_hover = #FFEECC       
$sucess = #6CD858       
$error = #FF533D

    .Page-title        
        font-family: $font       
        font-weight: 600       
        font-size: 20px       
        line-height: 20px       
        text-transform: uppercase       

    .Page-subtitle        
        font-family: $font       
        font-weight: 200       
        font-size: 20px       
        line-height: 20px       
        text-transform: uppercase       
    h1 
        font-family: $font       
        font-weight: 600       
        letter-spacing: -0.02em
        line-height: 44px       
        line-height: 102%
        font-size: 36px
        @media(max-width :1366px)       
            font-size: 28px
        @media (min-width: 1366px) and (max-width: 1920px)         
            font-size: 32px
        @media(max-width :1366px)       
            line-height: 44px       
            line-height: 102%
        @media (min-width: 1366px) and (max-width: 1920px)         
            line-height: 40px       
            line-height: 104%
            



              
           
    .button        
        padding-left: 16px       
        padding-right: 16px       
        padding-top: 8px       
        padding-bottom: 8px       
        border: none       
        align-items: center       
        text-align: center
        &:disabled
            background-color: $picked
        &:hover 
            background-color: $on_hover
            @media(max-width :1366px)       
                border: 1.5px solid $on_hover
            @media (min-width: 1366px) and (max-width: 1920px)         
                border: 2px solid $on_hover
            @media (min-width: 1920px)         
                border: 2.8px solid $on_hover                
        &_alt
            background-color: $white
            @media(max-width :1366px)       
                border: 1.5px solid $accent_active
            @media (min-width: 1366px) and (max-width: 1920px)
                border: 2px solid $accent_active
            @media (min-width: 1920px)
                border: 2.8px solid $accent_active
            &:disabled
                background-color: $white !important
                @media(max-width :1366px)       
                    border: 1.5px solid $accent_active !important
                @media (min-width: 1366px) and (max-width: 1920px)       
                    border: 2px solid $accent_active !important
            &:hover  
                @media(max-width :1366px)       
                    border: 1.5px solid $accent_active !important
                @media (min-width: 1366px) and (max-width: 1920px)       
                    border: 2px solid $accent_active !important
        &_accent
            background-color: $accent_active
            @media(max-width :1366px)      
                border: 1.5px solid $accent_active
            @media (min-width: 1366px) and (max-width: 1920px)       
                border: 2px solid $accent_active
            @media (min-width: 1920px)      
                border: 2.8px solid $accent_active     
            &:disabled
                background-color: $picked
                @media(max-width :1366px)       
                    border: 1.5px solid $picked
                @media (min-width: 1366px) and (max-width: 1920px)       
                    border: 2px solid $picked
                @media (min-width: 1920px)      
                    border: 2.8px solid $picked
        &_secondary
            background-color: $grey-2
            @media(max-width :1366px)       
                border: 1.5px solid $grey-2
            @media (min-width: 1366px) and (max-width: 1920px)       
                border: 2px solid $grey-2
            @media (min-width: 1920px)     
                border: 2.8px solid $grey-2       
            &:disabled
                background-color: $dark-grey-2 !important
                @media(max-width :1366px)       
                    border: 1.5px solid $dark-grey-2 !important
                @media (min-width: 1366px) and (max-width: 1920px)             
                    border: 2px solid $dark-grey-2 !important
                @media (min-width: 1920px)            
                    border: 2.8px solid $dark-grey-2 !important
            &:hover  
                @media(max-width :1366px)
                    border: 1.5px solid $light-grey
                @media (min-width: 1366px) and (max-width: 1920px) 
                    border: 2px solid $light-grey
                @media (min-width: 1920px)
                    border: 2.8px solid $light-grey           
                background-color: $light-grey
        &_ghost
            background-color: transparent !important
            @media(max-width :1366px)       
                border: 1.5px solid transparent !important
             @media (min-width: 1366px) and (max-width: 1920px)       
                border: 2px solid transparent !important
            @media (min-width: 1920px)       
                border: 2.8px solid transparent !important         
    





